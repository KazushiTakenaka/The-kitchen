<div class="container">
  <div class="row" >
    <% @likes.each do |like| %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <%= attachment_image_tag like.recipe.photos.first, :image, class: 'card-img-top' %>
          <div class="card-body">
            <h5 class="card-title"><%= like.recipe.name %></h5>
            <p class="card-text"><%= like.recipe.makes.first.method %></p>
            <%= link_to "レシピを見る！", recipe_path(like.recipe.id), method: :get, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row align-items-center">
    <div class="col-md-4 mx-auto">
    <%= paginate @likes %>
    </div>
  </div>
</div>