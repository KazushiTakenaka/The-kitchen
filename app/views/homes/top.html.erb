<%= flash[:success] %>
<div class="container" >
   <div class="row">
      <div class="col-md-12"><h1>レシピランキング</h1></div>
   </div>
  <div class="row">
    <div class="col-md-4"><h4>第1位</h4></div>
    <div class="col-md-4"><h4>第2位</h4></div>
    <div class="col-md-4"><h4>第3位</h4></div>
</div>
<div class="row" >
  <% @recipes_rank.each do |rank| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <%= attachment_image_tag rank.photos.first, :image, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= rank.name %></h5>
          <p class="card-text"><%= rank.makes.first.method %></p>
          <%= link_to "レシピを見る！", recipe_path(rank.id), method: :get, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row align-items-center">
  <div class="col-md-4 mx-auto">
  </div>
</div>
   <div class="row">
      <div class="col-md-12"><h1>新着レシピ</h1></div>
   </div>
  <%= render 'recipes/list', recipes: @recipes %>
</div>
