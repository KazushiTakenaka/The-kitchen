<!--ユーザーレシピ一覧-->
<div class="container">
    <div class="row">
      <div class="col-md-3"><%= attachment_image_tag @user, :image, class: 'img-fluid', fallback: "no_image.jpg" %></div>
      <table class="table table-bordered col-md-9">
        <tbody>
          <tr>
            <th class="", scope="row", style="width: 30%" >ニックネーム</th>
            <td class="", style="width: 70%" ><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="", scope="row", style="width: 30%" >紹介文</th>
            <td class="", style="width: 70%" ><%= @user.introduction%></td>
          </tr>
          <tr>
            <th class="", scope="row", style="width: 30%" >フォロワー</th>
            <td class="", style="width: 70%" ><%= @user.followers.count %></td>
          </tr>
          <% if @user == current_user %>
          <% else %>
          <tr>
            <th class="", scope="row", style="width: 30%" ></th>
            <td class="", style="width: 70%" >
            <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
            <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= render 'recipes/list', recipes: @recipes %>
</div>