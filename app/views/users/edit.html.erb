<div class="container">
  <div="row"><h1>プロフィール編集</h1></div>
  <%= form_with model: @user, url: user_path(@user), method: :patch, class: '', local: true do |f| %>
  <div class="row">
    <div class="col-md-3">&nbsp;</div>
    <table class="table table-borderless col-md-9">
      <tbody>
        <tr>
          <th class="t_title", scope="row", style="width: 30%" >名前</th>
          <td class="t_title", style="width: 70%" ><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class="t_title", scope="row", style="width: 30%" >ニックネーム</th>
          <td class="t_title", style="width: 70%" ><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <th class="t_title", scope="row", style="width: 30%" >プロフィール</th>
          <td class="t_title", style="width: 70%" ><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th class="t_title", scope="row", style="width: 30%" >プロフィール画像</th>
          <td class="t_title", style="width: 70%" ><%= f.attachment_field :image %></td>
        </tr>
      </tbody>
    </table>
  </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-4"><%= f.submit "変更を保存", class: "col-md-3 btn btn-primary mx-auto" %></div>
      <div class="col-md-1"></div>
      <div class="col-md-4"><%= link_to "退会する", user_registration_path(@user), class: "btn btn-primary mx-auto", method: :delete %></div>
    </div>
  </div>
  <% end %>
</div>